source "https://rubygems.org"

# Add this line at the top to use pre-built nokogiri
gem "nokogiri", "= 1.14.3", platforms: [:mingw, :x64_mingw, :mswin]

# GitHub Pages - this includes Jekyll and supported plugins
gem "github-pages", group: :jekyll_plugins

# Additional plugins that are compatible with GitHub Pages
group :jekyll_plugins do
  gem "jekyll-feed"
  gem "jekyll-seo-tag"
  gem "jekyll-paginate"
  gem "jekyll-remote-theme"
end

# For local development and testing
gem "webrick", "~> 1.7"